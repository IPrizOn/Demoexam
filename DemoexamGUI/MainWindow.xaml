<Window x:Class="DemoexamGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoexamGUI"
        mc:Ignorable="d"
        Title="Учёт партнёров" Height="500" Width="600" MinHeight="500" MinWidth="600">
    <Grid>
        <ListBox ItemsSource="{Binding PartnersDataOutList}" HorizontalContentAlignment="Stretch" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="20,10,10,10">
                                <TextBlock Text="{Binding TypeAndName}" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Director}" FontSize="14"/>
                                <TextBlock Text="{Binding Phone}" FontSize="14"/>
                                <TextBlock Text="{Binding Rating}" FontSize="14"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="{Binding Percentage}" FontSize="14" VerticalAlignment="Top" Margin="10,10,40,10"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
